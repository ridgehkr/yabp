%head
	%meta{ :'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
	%meta{ :charset => "utf-8" }

	/ Mobile viewport optimized
	%meta{ :content => "width=device-width, initial-scale=1.0, maximum-scale=1", :name => "viewport" }

	%meta{ :name => "description", :content => "" }

	%title=$siteTitle

	/ includes Normalize, primary, and print styles
	/ leaving media type intentionally ambiguous to allow for embedded print styles
	%link{ :rel => "stylesheet", :href => "css/main.css" }
	
	/ all scripts loaded through here
	= javascript_include_tag :loader

	/ IE-specific styles for older versions
	\<!--[if lt IE 9]>
	/ use the html5shiv w/ printshiv - https://github.com/aFarkas/html5shiv
	= javascript_include_tag :'libs/html5shiv-printshiv-3.6.2.min'