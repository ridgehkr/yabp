.l-col-container
	.l-primary
		%h2.m-hr-a Primary Content
		
		.l-container
			%p=lorem.paragraph

		.l-container
			%h2.m-hr-b Grid
			.l-halves.col-container.l-faux-columns
				.l-col
					%h3 .halves
					%p=lorem.paragraph
					%ul.m-bullets
						- for i in 1..2
							%li
								=lorem.words 3
								%ul.m-bullets
									- for i in 1..5
										%li=lorem.words 3
				.l-col
					%h3 .halves
					%p=lorem.paragraph
					%figure.media-feature
						%a{ :href => '#' }
							%span.media-wrap
								=image_tag lorem.image('350x350')
						%figcaption.caption
							%strong.title=lorem.words 5
							=lorem.sentences 2
						%p.proceed=link_to 'Read more', '#', :class => 'more'
					%p=lorem.paragraph
					%p=lorem.paragraph

	.l-sidebar
		%h2.m-hr-a Sidebar
		%p=lorem.paragraph